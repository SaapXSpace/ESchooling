            <div class="card">
                <div class="card-body" id="card_Assigned">
                    <div class="row">
                        <div class="col mt-0">
                            <h5 class="card-title">Assigned</h5>
                        </div>

                        <div class="col-auto">
                            <div class="avatar">
                                <div class="avatar-title rounded-circle" style="background-color: #005e89;color:white">
                                    <i class="align-middle" data-feather="mail"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h1 class="display-5 mt-1 mb-3" id="txt_assign">0</h1>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3 col-xl">
            <div class="card">
                <div class="card-body" id="card_Completed">
                    <div class="row">
                        <div class="col mt-0">
                            <h5 class="card-title">Completed</h5>
                        </div>

                        <div class="col-auto">
                            <div class="avatar">
                                <div class="avatar-title rounded-circle " style="background-color: #005e89;color:white">
                                    <i class="align-middle" data-feather="mail"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h1 class="display-5 mt-1 mb-3" id="txt_completed">0</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
</div>

<div class="row">
    <div class="col-12 col-lg-12 d-flex">
        <div class="card flex-fill w-100">
            <div class="card-header">
                <h5 class="card-title mb-0">Assign Request Overview</h5>
            </div>
            <div class="card-body d-flex w-100">
                <div class="container">
                    <div class="tab">
                        <ul class="nav nav-tabs" role="tablist">
                            <li class="nav-item"><a class="nav-link active" href="#tab-1" data-toggle="tab" role="tab">Requests Information</a></li>
                            <li class="nav-item"><a class="nav-link" href="#tab-2" data-toggle="tab" role="tab">Assigned Information</a></li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="tab-1" role="tabpanel">
                                    <table id="data_table" class="table table-responsiv table-striped table-bordered" style="width:100% ;" >
                                        <thead>
                                            <tr>
                                                <th></th>
                                                <th>S#</th>
                                                <th>Asset</th>
                                                <th>Requested By</th>
                                                <th>Request Date</th>
                                                <th>Approved</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            <div class="tab-pane" id="tab-2" role="tabpanel">
                                <div class="card ">
                                    <table id="data_table_assign" class="table table-responsiv table-striped table-bordered" style="width:100% ;" >
                                        <thead>
                                            <tr>
                                                @* <th></th> *@
                                                <th>S#</th>
                                                @* <th>Code</th> *@
                                                <th>Asset</th>
                                                <th>Request User</th>
                                                <th>Request Date</th>
                                                <th>Approved</th>
                                                <th>Assign User</th>
                                                <th>Assign Date</th>
                                                <th>Status</th>
                                                @* <th>Active</th> *@
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

