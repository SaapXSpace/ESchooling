@page
@{
    ViewData["Title"] = "ALL ASSIGN REQUESTS";
    Layout = "_Layout";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-12 " >
            <h4 class="header-title" >
                @ViewData["Title"]
            </h4>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12 text-right">
        <button type="button" class="btn btn-light align-middle" data-toggle="modal" data-target="#data_Model"><i class="align-middle mr-2 fas fa-fw fa-plus-square"></i>RECORD</button>
    </div>
    <div class="col-12 mt-3 ">
        <div class="card pt-4 pb-4">
            <div class="card-body">
                <table id="data_table" class="table table-responsiv table-striped table-bordered" style="width:100% ;" >
                  <thead>
                        <tr>
                            <th></th>
                            <th>S#</th>
                            <th>Code</th>
                            <th>Asset</th>
                            <th>Request User</th>
                            <th>Request Date</th>
                            <th>Approved</th>
                            <th>Assign User</th>
                            <th>Assign Date</th>
                            <th>Status</th>
                            @* <th>Active</th> *@
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="data_Model" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"> Manager</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body ">
                <form id="create_form">
                    <div class="row m-2">
                        <div class="col-lg-12" style="text-align:right;">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <input id="btn_sav" type="button" value="Assign"
                            class="btn btn-success" />
                            <input id="btn_upd" type="button" value="Assign"
                            class="btn btn-success" />
                        </div>
                    </div>
                    <br>
                    <fieldset id="SubmitForm">
                        <div class="row m-2">
                            <div class="col-lg-10">
                                    <label class="col-form-label col-lg-9" id="txt_id" ></label>
                            </div>
                            <div class="col-lg-2" style="text-align:right;">
                                <label class="custom-control custom-checkbox m-0">
                                    <input type="checkbox" id="ck_approved" class="custom-control-input">
                                    <span class="custom-control-label">Approved</span>
                                </label>
                            </div>
                        </div>
                        <div class="row form-group m-2">
                            <div class="col-lg-6 did-floating-label-content" >
                                <input class="did-floating-input" id="txt_code" type="number">
                                <label class="did-floating-label">Code</label>
                            </div>
                            <div class="col-lg-6 did-floating-label-content">
                                <select class="did-floating-select" id="txt_request" >

                                </select>
                                <label class="did-floating-label">Request</label>
                            </div>
                            <div class="col-lg-6 did-floating-label-content">
                                <select class="did-floating-select" id="txt_crew" >

                                </select>
                                <label class="did-floating-label">Crew</label>
                            </div>
                            <div class="col-lg-6 did-floating-label-content" >
                                <input class="did-floating-input" id="txt_date" type="date">
                                <label class="did-floating-label">Date</label>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- END  modal -->
@section Scripts
{
  <script src="@Url.Content("~/AppJS/Manager/AssignRequests.js")" type="module"></script>
}

