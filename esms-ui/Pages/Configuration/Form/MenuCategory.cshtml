                            d="M3,16 L5,16 C5.55228475,16 6,15.5522847 6,15 C6,14.4477153 5.55228475,14 5,14 L3,14 L3,12 L5,12 C5.55228475,12 6,11.5522847 6,11 C6,10.4477153 5.55228475,10 5,10 L3,10 L3,8 L5,8 C5.55228475,8 6,7.55228475 6,7 C6,6.44771525 5.55228475,6 5,6 L3,6 L3,4 C3,3.44771525 3.44771525,3 4,3 L10,3 C10.5522847,3 11,3.44771525 11,4 L11,19 C11,19.5522847 10.5522847,20 10,20 L4,20 C3.44771525,20 3,19.5522847 3,19 L3,16 Z"
                            fill="#000000" opacity="0.3" />
                        <path
                            d="M16,3 L19,3 C20.1045695,3 21,3.8954305 21,5 L21,15.2485298 C21,15.7329761 20.8241635,16.200956 20.5051534,16.565539 L17.8762883,19.5699562 C17.6944473,19.7777745 17.378566,19.7988332 17.1707477,19.6169922 C17.1540423,19.602375 17.1383289,19.5866616 17.1237117,19.5699562 L14.4948466,16.565539 C14.1758365,16.200956 14,15.7329761 14,15.2485298 L14,5 C14,3.8954305 14.8954305,3 16,3 Z"
                            fill="#000000" />
                    </g>
                </svg>
                <!--end::Svg Icon-->
            </span> NEW
        </button>
    </div>
    <div class="col-12 mt-3 ">
        <div class="card pt-4 pb-4">
            <div class="card-body">
                <table id="data_table" class="table table-responsiv table-striped table-bordered" style="width:100% ;" >
                  <thead>
                        <tr>
                            <th></th>
                            <th>S#</th>
                            <th>Code</th>
                            <th>Name</th>
                            <th>Icon</th>
                            <th>Active</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="data_Model" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header p-3" style="background-color: #3e4676;">
                <h4 class="modal-title text-white"> @ViewData["Title"]</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="text-white">&times;</span>
                </button>
            </div>
            <div class="modal-body ">
                <form id="create_form">
                    @* <div class="row m-2">
                    </div>
                    <br> *@
                    <fieldset id="SubmitForm">
                        <div class="row ">
                            <div class="col-lg-7 " >
                                @* <h4 class="pt-2 pl-2 " >MENU-CATEGORY INFORMARION</h4> *@
                            </div>
                            <div class="col-lg-4 did-floating-label-content" >
                                <input class="did-floating-input" id="txt_code" type="text">
                                <label class="did-floating-label" >Code</label>
                            </div>
                            <div class="col-lg-1 did-floating-label-content" >
                                <button type="button" id="btn_codegenerate" class="btn btn-primary align-middle   m-1" style="background-color: #2c497d;color:white"><i class="align-middle fas fa-fw fa-sync-alt"></i></button>
                            </div>
                        </div>
                        <hr>
                        <div class="row m-2">
                            <div class="col-lg-10">
                                    <label class="col-form-label col-lg-9" id="txt_id" ></label>
                                    @* <label class="col-form-label col-lg-9" id="txt_code" ></label> *@
                            </div>
                        </div>
                        @* <div class="row form-group m-2">
                            <div class="col-lg-11 did-floating-label-content" >
                                <input class="did-floating-input " readonly id="txt_code" type="text">
                                <label class="did-floating-label" >Code</label>
                            </div>
                            <div class="col-lg-1 did-floating-label-content" >
                                <button type="button" id="btn_codegenerate" class="btn btn-primary align-middle   m-1" style="background-color: #2c497d;color:white"><i class="align-middle fas fa-fw fa-sync-alt"></i></button>
                            </div>
                        </div> *@
                        <div class="row form-group m-2">
                            <div class="col-lg-8 did-floating-label-content" >
                                <input class="did-floating-input" id="txt_name" type="text">
                                <label class="did-floating-label">Name</label>
                            </div>
                            <div class="col-lg-4 did-floating-label-content" >
                                <input class="did-floating-input" id="txt_icon" type="text">
                                <label class="did-floating-label">Icon</label>
                            </div>
                            <div class="col-lg-12" style="text-align:right;">
                                <label class="custom-control custom-checkbox m-0">
                                    <input type="checkbox" id="ck_act" class="custom-control-input">
                                    <span class="custom-control-label">Active</span>
                                </label>
                            </div>
                        </div>
                        <br>
                        <div class="row form-group m-2">
                            <div class="col-lg-12" style="text-align:right;">
                            <button type="button" class="btn " data-dismiss="modal" style="background-color: #2c497d;color:white">Close</button>
                            <input id="btn_sav" type="button" value="Save"
                            class="btn " style="background-color: #7566cc;color:white" />
                            <input id="btn_upd" type="button" value="Update" 
                            class="btn btn-warning" style="background-color: #7566cc;color:white" />
                        </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            @* <div class="modal-footer">
                
            </div> *@
        </div>
    </div>
</div>
<!-- END  modal -->
@section Scripts
{
  <script src="@Url.Content("~/AppJS/Configuration/Form/MenuCategory.js")" type="module"></script>
}

