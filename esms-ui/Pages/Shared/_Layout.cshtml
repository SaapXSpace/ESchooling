<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> EINSTITUTE [ @ViewData["Title"] ]</title>
	<link rel="icon" href="~/img/brands/degree.png" type="image/jpg">
	<link href="~/css/floatinglabels.css" rel="stylesheet" asp-append-version="true"> 
    <link href="~/css/modern.css" rel="stylesheet" asp-append-version="true"> 
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true"> 
	<!-- BEGIN SETTINGS -->
	<!-- You can remove this after picking a style -->
	<style>
		body {
			opacity: 0;
		}
	</style>
	
	<link href="~/js/sweet-alert/sweet-aleart.css" rel="stylesheet">
	<script src="~/js/sweet-alert/sweet-aleart.min.js"></script>
	<script src="~/js/settings.js" asp-append-version="true"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.4/xlsx.full.min.js" asp-append-version="true"></script>

	<script src="~/js/QrCode/qrcode.js" asp-append-version="true"></script>
	<script src="~/js/QrCode/qrcode.min.js" asp-append-version="true"></script>
	<script src="~/js/QrCode/html5-qrcode.min.js" asp-append-version="true" ></script>

	<!-- END SETTINGS -->
    <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'UA-120946860-7');
    </script>
	
</head>
<body>
    <div class="splash active">
		<div class="splash-icon"></div>
	</div>

    <div class="wrapper">
		<nav id="sidebar" class="sidebar">
			<a class="sidebar-brand ">
				<center><img src="~/img/brands/einstituteLogo.png" alt="" width="100%"  ></center>
			
			<hr>
			</a>		
			<div class="sidebar-content p-2">
				<ul class="sidebar-nav" id="sideMenu">
				</ul>
			</div>
		</nav>
		<div class="main">
			
			<nav class="navbar navbar-expand navbar-theme">
				<a class="sidebar-toggle d-flex mr-2">
					<i class="hamburger align-self-center"></i>
				</a>
				<center><h4 class="m-2 text-center" style="color:white" id="ClockTime"></h4></center>

				<div class="navbar-collapse collapse">
					<ul class="navbar-nav ml-auto">
						<li class="nav-item dropdown active">	
						</li>
						<li class="nav-item dropdown ml-lg-2">
							
							<a class="nav-link dropdown-toggle position-relative" href="#" id="userDropdown" data-toggle="dropdown">
								<i class="align-middle fas fa-cog"></i>
							</a>
							<div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
								@* <a class="dropdown-item" href="#"><i class="align-middle mr-1 fas fa-fw fa-user"></i> View Profile</a>
								<a class="dropdown-item" href="#"><i class="align-middle mr-1 fas fa-fw fa-cogs"></i> Settings</a> *@
								<div class="dropdown-divider"></div>
								<a class="dropdown-item" href="/Auth/SignIn"><i class="align-middle mr-1 fas fa-fw fa-arrow-alt-circle-right"></i> Sign out</a>
							</div>
						</li>
					</ul>
				</div>
			</nav>
			<main class="content">			
                @RenderBody()
    		</main>
			<footer class="footer" >
				<div class="text-center p-2 pt-4" style="background-color: white;position:sticky;">
				    <h4> 2023 Copyright © & Powered By &nbsp; <span><img src="~/img/brands/our_logo.png" width="7%" alt=""></span></h4>
				</div>
			</footer>
		</div>
	</div>

	<script src="~/js/app.js"></script>
    <script src="~/js/dashboard.js"></script>
	<script src="~/AppJS/Shared/Layout.js" ></script>
	
	@using Microsoft.Extensions.Configuration
    @inject IConfiguration Configuration
    <script>
        var apiUrl = @Json.Serialize(@Configuration.GetSection("UrlAPI")["IFS"]);
        var api_signature = @Json.Serialize(@Configuration.GetSection("UrlAPI")["SIG"]);
    </script>
    @await RenderSectionAsync("Scripts", required: false)
	
</body>
</html>

