<div class="modal fade" id="data_Model" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header p-3" style="background-color: #3e4676;">
                <h4 class="modal-title text-white"> @ViewData["Title"]</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="text-white">&times;</span>
                </button>
            </div>
            <div class="modal-body ">
                <form id="create_form">
                    <fieldset id="SubmitForm">
                        <div class="row ">
                            <div class="col-lg-7 " >
                                @* <h4 class="pt-2 pl-2 " >BRANCH INFORMARION</h4> *@
                            </div>
                            <div class="col-lg-4 did-floating-label-content" >
                                <input class="did-floating-input" id="txt_code" type="text">
                                <label class="did-floating-label" >Code</label>
                            </div>
                            <div class="col-lg-1 did-floating-label-content" >
                                <button type="button" id="btn_codegenerate" class="btn btn-primary align-middle   m-1" style="background-color: #2c497d;color:white"><i class="align-middle fas fa-fw fa-sync-alt"></i></button>
                            </div>
                        </div>
                        <hr>
                        <div class="row m-2">
                            <div class="col-lg-10">
                                    <label class="col-form-label col-lg-9" id="txt_id" ></label>
                                    @* <label class="col-form-label col-lg-9" id="txt_code" ></label> *@
                            </div>
                        </div>
                        <div class="row form-group m-2">
                            <div class="col-lg-12 did-floating-label-content">
                                <select class="did-floating-select" id="sel_voucher" >
                                    
                                </select>
                                <label class="did-floating-label">#Voucher</label>
                            </div>
                           
                            <div class="col-lg-4 did-floating-label-content" >
                                <input class="did-floating-input" readonly id="txt_totalAmount" type="number">
                                <label class="did-floating-label">Total</label>
                            </div>
                            <div class="col-lg-8 did-floating-label-content" >
                                <input class="did-floating-input" readonly id="txt_inword" type="text">
                                <label class="did-floating-label">In Words</label>
                            </div>
                            <div class="col-lg-4 did-floating-label-content">
                                <select class="did-floating-select" id="sel_paytype" >
                                    <option value="C">Cash</option>
                                    <option value="O">Online</option>
                                </select>
                                <label class="did-floating-label">Payment Type</label>
                            </div>
                            @* <div class="col-lg-4 did-floating-label-content" >
                                <input class="did-floating-input" id="txt_pay" type="number">
                                <label class="did-floating-label">Pay</label>
                            </div>
                            
                            <div class="col-lg-4 did-floating-label-content" >
                                <input class="did-floating-input" readonly id="txt_balance" type="number">
                                <label class="did-floating-label" >Balance</label>
                            </div> *@
                            <div class="col-lg-8 did-floating-label-content" >
                                <input class="did-floating-input" id="txt_narr" type="text">
                                <label class="did-floating-label">Description</label>
                            </div>
                        </div>
                        <div class="row form-group m-2" id="bankdiv" style="display: none;" >
                             <div class="col-lg-6 did-floating-label-content">
                                <select class="did-floating-select" id="sel_accounttype" >
                                    
                                </select>
                                <label class="did-floating-label">Account Type</label>
                            </div>
                            <div class="col-lg-6 did-floating-label-content">
                                <select class="did-floating-select" id="sel_account" >
                                    
                                </select>
                                <label class="did-floating-label">Account</label>
                            </div>
                        </div>
                        <br>
                        <div class="row form-group m-2">
                            <div class="col-lg-12" style="text-align:right;">
                                <button type="button" class="btn " data-dismiss="modal" style="background-color: #2c497d;color:white">Close</button>
                                <input id="btn_sav" type="button" value="Save"
                                class="btn " style="background-color: #7566cc;color:white" />
                                <input id="btn_upd" type="button" value="Update" 
                                class="btn btn-warning" style="background-color: #7566cc;color:white" />
                            </div>
                        </div>
                        
                    </fieldset>
                </form>
            </div>
            @* <div class="modal-footer">
                
            </div> *@
        </div>
    </div>
</div>
