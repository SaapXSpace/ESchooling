                  <thead>
                        <tr>
                            <th></th>
                            <th>CODE</th>
                            <th>DATE</th>
                            <th>SSB</th>
                            <th>VOUCHER</th>
                            <th>CNIC</th>
                            <th>VOUCHER ON ACCOUNT</th>
                            <th>TOTAL  </th>
                            <th>PAYMENT TYPE</th>
                            <th>ACCOUNT</th>
