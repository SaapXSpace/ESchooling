@page
@{
    ViewData["Title"] = "TEACHER MANAGEMENT";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h4 class="header-title">
                @ViewData["Title"]
            </h4>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12 text-right">
        <button type="button" id="openmodal" data-toggle="modal" data-target="#data_Model" class="btn btn-light font-weight-bolder"
                aria-haspopup="true" aria-expanded="false">
            <span class="svg-icon svg-icon-md">
                <!--begin::Svg Icon | path:assets/media/svg/icons/Design/PenAndRuller.svg-->
                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
                     width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                    <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                        <rect x="0" y="0" width="24" height="24" />
                        <path d="M3,16 L5,16 C5.55228475,16 6,15.5522847 6,15 C6,14.4477153 5.55228475,14 5,14 L3,14 L3,12 L5,12 C5.55228475,12 6,11.5522847 6,11 C6,10.4477153 5.55228475,10 5,10 L3,10 L3,8 L5,8 C5.55228475,8 6,7.55228475 6,7 C6,6.44771525 5.55228475,6 5,6 L3,6 L3,4 C3,3.44771525 3.44771525,3 4,3 L10,3 C10.5522847,3 11,3.44771525 11,4 L11,19 C11,19.5522847 10.5522847,20 10,20 L4,20 C3.44771525,20 3,19.5522847 3,19 L3,16 Z"
                              fill="#000000" opacity="0.3" />
                        <path d="M16,3 L19,3 C20.1045695,3 21,3.8954305 21,5 L21,15.2485298 C21,15.7329761 20.8241635,16.200956 20.5051534,16.565539 L17.8762883,19.5699562 C17.6944473,19.7777745 17.378566,19.7988332 17.1707477,19.6169922 C17.1540423,19.602375 17.1383289,19.5866616 17.1237117,19.5699562 L14.4948466,16.565539 C14.1758365,16.200956 14,15.7329761 14,15.2485298 L14,5 C14,3.8954305 14.8954305,3 16,3 Z"
                              fill="#000000" />
                    </g>
                </svg>
                <!--end::Svg Icon-->
            </span> NEW
        </button>
    </div>
    <div class="col-12 mt-3">
        <div class="card pt-4 pb-4">
            <div class="card-body">
                <table id="data_table" class="table table-striped table-bordered" style="width:100%;">
                    <thead>
                        <tr>
                            <th>S#</th>
                            <th>Picture</th>
                            <th>CODE</th>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Active</th>
                            <th>Actions</th>
                            <th style="display:none;">Teacher ID</th>
                        </tr>
                    </thead>
                </table>
                <div class="text-center" id="table_loading_image"><img src="~/img/brands/pro_gif.gif" alt="Loading..."></div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="data_Model" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header p-3" style="background-color: #3e4676;">
                <h4 class="modal-title text-white">@ViewData["Title"]</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="text-white">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="create_form">
                    <fieldset id="SubmitForm">
                        <div class="row form-group align-items-center">
                            <div class="col-md-2 ml-3 text-center position-relative">
                                <input type="file" id="file_picture" class="d-none" onchange="showPreview(event)">
                                <img id="img_preview" src="~/img/images/profile.jpg" width="100%" style="aspect-ratio:1; object-fit:cover; border-radius:50%; cursor:pointer;"  alt="Profile Picture" />
                                <i class="fas fa-trash-alt text-danger position-absolute" style="bottom:5px; right:8px; cursor:pointer;" onclick="resetImagePreview()"></i>
                            </div>
                            <div class="col-md-9 offset-md-1">
                                <div class="did-floating-label-content">
                                    <input class="did-floating-input" id="txt_code" type="hidden" readonly>
                                    @* <label class="did-floating-label">Code</label> *@
                                </div>
                                <div class="did-floating-label-content mt-3">
                                    <input class="did-floating-input" id="txt_registration_number" type="text" required placeholder="e.g., 625">
                                    <label class="did-floating-label">Registration Number (for picture)</label>
                                </div>
                            </div>
                        </div>
                        <hr>
                        <div class="row m-2">
                            <div class="col-lg-12">
                                <input type="hidden" id="txt_id">
                                <input type="hidden" id="txt_picture_url" />
                            </div>
                        </div>

                        <div class="row form-group m-2">
                            <div class="col-lg-6 did-floating-label-content">
                                <input class="did-floating-input" id="txt_fullname" type="text">
                                <label class="did-floating-label" >Full Name <span style="color: red">*</span> </label>
                            </div>
                            <div class="col-lg-6 did-floating-label-content">
                                <input class="did-floating-input" id="txt_email" type="text">
                                <label class="did-floating-label">Email<span style="color: red">*</span></label>
                            </div>
                            <div class="col-lg-6 did-floating-label-content">
                                <input class="did-floating-input" id="txt_phone" type="text">
                                <label class="did-floating-label">Phone<span style="color: red">*</span></label>
                            </div>

                            <div class="col-lg-6 did-floating-label-content">
                                <input class="did-floating-input" id="txt_cnic" type="text" />
                                <label class="did-floating-label">CNIC<span style="color: red">*</span></label>
                            </div>
                            <div class="col-lg-6 did-floating-label-content">
                                <input class="did-floating-input" id="txt_gender" type="text" />
                                <label class="did-floating-label">Gender<span style="color: red">*</span></label>
                            </div>
                            <div class="col-lg-6 did-floating-label-content">
                                <input class="did-floating-input" id="txt_dob" type="date" />
                                <label class="did-floating-label">Date of Birth<span style="color: red">*</span></label>
                            </div>
                            <div class="col-lg-6 did-floating-label-content">
                                <input class="did-floating-input" id="txt_joining" type="date" />
                                <label class="did-floating-label">Joining Date<span style="color: red">*</span></label>
                            </div>
                            <div class="col-lg-6 did-floating-label-content">
                                <input class="did-floating-input" id="txt_empstatus" type="text" />
                                <label class="did-floating-label">Employment Status<span style="color: red">*</span></label>
                            </div>
                            <div class="col-lg-6 did-floating-label-content">
                                <input class="did-floating-input" id="txt_exitdate" type="date" />
                                <label class="did-floating-label">Exit Date<span style="color: red">*</span>    </label>
                            </div>
                            <div class="col-lg-6 did-floating-label-content">
                                <input class="did-floating-input" id="txt_exitreason" type="text" />
                                <label class="did-floating-label">Exit Reason</label>
                            </div>

                            <div class="col-lg-12" style="text-align:right;">
                                <label class="custom-control custom-checkbox m-0">
                                    <input type="checkbox" id="ck_act" class="custom-control-input">
                                    <span class="custom-control-label">Active</span>
                                </label>
                            </div>
                        </div>
                        <br>
                        <div class="row form-group m-2 gap-3">
                            <div class="col-lg-12 d-flex justify-content-end ">
                                <button type="button" class="btn mr-1" data-dismiss="modal" style="background-color: #2c497d; color: white;">Close</button>
                                <input id="btn_sav" type="button" value="Save" class="btn " style="background-color: #7566cc; color: white;" />
                                <input id="btn_upd" type="button" value="Update" class="btn " style="background-color: #7566cc; color: white;" />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- END modal -->
@section Scripts
{
    <script src="@Url.Content("~/AppJS/Payroll/Form/Teacher.js")" type="module"></script>
}
